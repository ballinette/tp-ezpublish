{% extends '@KaliopStaticHtml/static-html/layout.html.twig' %}

{% set metaTitle = 'Loading assets with Assetic' %}

{% block body %}
    <h1>
        {{ metaTitle }}
    </h1>

    <p>
        This page should be able to load: one image, one stylesheet and 2 scripts.
    </p>

    <!-- Loading an image -->
    {% image '@KaliopStaticHtmlBundle/Resources/public/demo/baby-sloth.jpg' %}
    <p>
        <img src="{{ asset_url }}" alt="[You should see a baby sloth here]">
    </p>
    {% endimage %}

    <!-- Loading stylesheets -->
    {% stylesheets
        '@KaliopStaticHtmlBundle/Resources/public/demo/styles.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <!-- Loading scripts -->
    {% javascripts
        '@KaliopStaticHtmlBundle/Resources/public/demo/script1.js'
        '@KaliopStaticHtmlBundle/Resources/public/demo/script2.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
